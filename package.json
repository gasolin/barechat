{
  "name": "barechat-monorepo",
  "version": "2.0.2",
  "description": "Anonymous chat anywhere with commandline - Monorepo",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build --filter=*",
    "dev:all": "bun run dev --filter=*",
    "test": "bun run test --filter=*",
    "lint": "bun run lint --filter=*",
    "clean": "bun run clean --filter=*",
    "cli": "bun run --filter=barechat",
    "cli:start": "bun run --filter=barechat start",
    "cli:dev": "bun dev.js",
    "web": "bun run --filter=barechat-web",
    "web:start": "bun run --filter=barechat-web start",
    "web:dev": "bun run --filter=barechat-web dev",
    "doc": "bun run --filter=barechat doc && echo 'Documentation generated in doc/api.md'",
    "publish:cli": "bun run --filter=barechat publish",
    "publish:cli:dry-run": "bun run --filter=barechat publish --dry-run",
    "publish:web": "bun run --filter=barechat-web publish",
    "publish:web:dry-run": "bun run --filter=barechat-web publish --dry-run"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "author": "Fred Lin <gasolin+barechat@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gasolin/barechat.git"
  },
  "bugs": {
    "url": "https://github.com/gasolin/barechat/issues"
  },
  "homepage": "https://github.com/gasolin/barechat",
  "keywords": [
    "bare",
    "chat",
    "terminal",
    "holepunch",
    "p2p",
    "monorepo"
  ],
  "engines": {
    "bun": ">=1.0.0"
  }
}